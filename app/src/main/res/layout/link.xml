<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/assassin" >
    <Button
        android:id="@+id/pausebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/gameView"
        android:layout_marginLeft="30dp"
        android:text="@string/pause"
        />

    <Button
        android:id="@+id/refreshbutton"
        android:layout_toRightOf="@+id/pausebutton"
        android:layout_alignTop="@+id/pausebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/gameView"
        android:text="@string/refresh" />
   <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/refreshbutton"
        android:layout_toRightOf="@+id/refreshbutton"
         />
    
    <lianliankan.GameView
        android:id="@+id/gameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="2dp" />
</RelativeLayout>
